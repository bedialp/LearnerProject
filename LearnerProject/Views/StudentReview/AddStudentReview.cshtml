﻿@model LearnerProject.Models.Entities.Review
@{
    ViewBag.Title = "AddStudentReview";
    Layout = "~/Views/StudentLayout/Index.cshtml";
}

<h3>Kurs Puanlama Sayfası</h3>
<form method="post">
    <label>Kurs Adi</label>
    @Html.DropDownListFor(x => x.CourseId, (List<SelectListItem>)ViewBag.courses, "Kurs Secin", new { @class = "form-control" })
    <br />

    <label>Degerlendirme Puani</label>
    @Html.TextBoxFor(x => x.ReviewValue, new { @class = "form-control" })
    <br />

    <label>Aciklama</label>
    @Html.TextAreaFor(x => x.Comment, 5, 30, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary"><i class="fa fa-save"></i> Kaydet</button>
</form>