@model List<LearnerProject.Models.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Kategoriler</h3>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adi</th>
        <th>Islemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger"><i class="fa fa-trash"></i> Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-info"><i class="fa fa-pen"></i> Guncelle</a>
            </td>
        </tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-outline-info">Yeni Kategori Ekle</a>


