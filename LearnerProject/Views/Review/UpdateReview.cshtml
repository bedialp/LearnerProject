﻿@model LearnerProject.Models.Entities.Review
@{
    ViewBag.Title = "UpdateReview";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Inceleme Guncelle</h3>

<form method="post">

    <label>Inceleme ID</label>
    @Html.TextBoxFor(x => x.ReviewId, new { @class = "form-control", style = "display: none;" })
    <br />
    <label>Kurs Secim</label>
    @Html.DropDownListFor(x => x.CourseId, (List<SelectListItem>)ViewBag.course, "Kurs Seç", new { @class = "form-control" })
    <br />
    <label>Inceleme Puani</label>
    @Html.TextBoxFor(x => x.ReviewValue, new { @class = "form-control" })
    <br />
    <label>Yorumlar</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <label>Ogrenci Secim</label>
    @Html.DropDownListFor(x => x.StudentId, (List<SelectListItem>)ViewBag.student, "Öğrenci Seç", new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary"><i class="fas fa-save"> Kaydet</i></button>
</form>