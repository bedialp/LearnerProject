
@model List<LearnerProject.Models.Entities.Banner>

<div class="untree_co-hero overlay" style="background-image: url('/Templates/learner-1.0.0/images/img-school-3-min.jpg'); " id="banner">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-12">
                <div class="row justify-content-center ">
                    <div class="col-lg-6 text-center ">
                        @foreach (var item in Model)
                        {
                            <a href="/StudentLogin/Index/" data-fancybox data-aos="fade-up" data-aos-delay="0" class="caption mb-4 d-inline-block">
                                DERSLERI IZLEMEYE HEMEN BASLA
                            </a>

                            <h1 class="mb-4 heading text-white" data-aos="fade-up" data-aos-delay="100">@item.Title</h1>
                            <p class="mb-0" data-aos="fade-up" data-aos-delay="300">
                                <a href="/Default/Index/#course" class="btn btn-secondary">Kurslarimizi Kesfet</a>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
