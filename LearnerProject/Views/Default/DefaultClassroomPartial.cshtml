﻿@model List<LearnerProject.Models.Entities.Classroom>

<div class="untree_co-section" id="classroom">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-7 text-center" data-aos="fade-up" data-aos-delay="0">
                <h2 class="line-bottom text-center mb-4">Eğitim Sınıflarımız</h2>
                <p>Şu an öğrenci alımı yapan sınıflanırımızı inceleyin.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-6 col-sm-6 col-md-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="feature">
                        <span class="@item.Icon"></span>
                        <h3>@item.Name</h3>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div> <!-- /.container -->
</div>