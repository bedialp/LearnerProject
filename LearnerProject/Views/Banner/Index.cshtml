@model List<LearnerProject.Models.Entities.Banner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h3>Banner / One Cikan Resim</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Baslık</th>
            <th>Islemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>

                <td>
                    <a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger"><i class="fa fa-trash"></i>Sil</a>
                    <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info"> <i class="fa fa-edit"></i>Guncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Banner/AddBanner/" class="btn btn-outline-success"><i class="fa fa-plus m-2"></i>Banner Ekle</a>