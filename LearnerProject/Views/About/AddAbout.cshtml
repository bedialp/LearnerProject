﻿@model LearnerProject.Models.Entities.About
@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hakkımda Bilgisi Ekle</h3>

<form method="post">

    <label>Baslik</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Aciklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Gorsel URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Item1</label>
    @Html.TextBoxFor(x => x.Item1, new { @class = "form-control" })
    <br />
    <label>Item2</label>
    @Html.TextBoxFor(x => x.Item2, new { @class = "form-control" })
    <br />
    <label>Item3</label>
    @Html.TextBoxFor(x => x.Item3, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>

</form>