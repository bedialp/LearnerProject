﻿@model LearnerProject.Models.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Ekle</h3>

<form method="post">
    <label>Isim Soyisim</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", @placeholder = "Isim Soyisim" })
    <br />
    <label>Baslik</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Baslık" })
    <br />
    <label>Gorsel URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", @placeholder = "Gorsel URL" })
    <br />

    <button class="btn btn-outline-primary"><i class="fas fa-save"></i>Kaydet</button>

</form>