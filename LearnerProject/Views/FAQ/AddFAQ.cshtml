@model LearnerProject.Models.Entities.FAQ
@{
    ViewBag.Title = "AddFAQ";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>En Cok Sorulan Sorulardan Ekle</h3>
<form method="post">

    <label>Sorular</label>
    @Html.TextBoxFor(x => x.Question, new { @class = "form-control" })
    <br />
    <label>Cevaplar</label>
    @Html.TextBoxFor(x => x.Answer, new { @class = "form-control" })
    <br />
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-primary"><i class="fas fa-save">Kaydet</i></button>
</form>